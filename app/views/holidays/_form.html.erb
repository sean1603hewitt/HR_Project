<%= form_for @holiday do |f| %>

  <% if @holiday.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@holiday.errors.count, "error") %> prohibited
        this holiday from being saved:
      </h2>
      <ul>
        <% @holiday.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <p>
    <%= f.label :name%><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email%><br>
    <%= f.email_field :email %>
  </p>  
   <p>
    <%= f.label :start_date%><br>
    <%= f.date_field :start_date %>
  </p> 
   <p>
    <%= f.label :end_date%><br>
    <%= f.date_field :end_date %>
  </p>   
  
  <p>
    <%= f.label :Special_Circumstances %><br>
    <%= f.text_area :Special_Circumstances %>
  </p>
  <%= check_box_tag(:approved) %>
  <%= label_tag(:approved, "Approved by Management") %>
  
  <p>
  <p>
    <%= f.label :Reasons_for_Refusal %><br>
    <%= f.text_area :Reasons_for_Refusal %>
  </p>  
    <%= f.submit %>
  </p>
<% end %>